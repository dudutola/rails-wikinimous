<%= form_with model: @article, class: "d-flex flex-column gap-4" do |f| %>
  <div class="d-flex flex-column">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="d-flex flex-column">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>

  <div class="pb-3">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
